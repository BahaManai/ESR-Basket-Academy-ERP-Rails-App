<% content_for :title, "Produits" %>
<% @page_title = "Produits"%>

<p>
  <%= link_to new_product_path, class: "btn btn-success btn-sm float-right mr-1" do %>
    <i class="bi bi-plus-circle"></i>&nbsp; Ajouter un produit
  <% end %>
</p><br>
<table class="table table-bordered datatable table-hover table-sm">
  <thead class="table-primary" style ="color:rgb(2, 30, 144)">
    <tr>
      <th>#</th>
      <th>Nom du produit</th>
      <th>Prix (DT)</th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    <% @products.each do |produit| %>
      <tr id="<%= dom_id produit %>">
        <td><%= produit.id %></td>
        <td><%= produit.nom %></td>
        <td><%= produit.prix %></td>
        <td>
          <%= link_to edit_product_path(produit),style:"padding:4px 4px 0px 4px" ,class: "btn btn-info btn-sm" do %>
                      <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" fill="currentColor" class="bi bi-pencil-square" viewBox="0 0 16 16">
                        <path d="M15.502 1.94a.5.5 0 0 1 0 .706L14.459 3.69l-2-2L13.502.646a.5.5 0 0 1 .707 0l1.293 1.293zm-1.75 2.456-2-2L4.939 9.21a.5.5 0 0 0-.121.196l-.805 2.414a.25.25 0 0 0 .316.316l2.414-.805a.5.5 0 0 0 .196-.12l6.813-6.814z"/>
                        <path fill-rule="evenodd" d="M1 13.5A1.5 1.5 0 0 0 2.5 15h11a1.5 1.5 0 0 0 1.5-1.5v-6a.5.5 0 0 0-1 0v6a.5.5 0 0 1-.5.5h-11a.5.5 0 0 1-.5-.5v-11a.5.5 0 0 1 .5-.5H9a.5.5 0 0 0 0-1H2.5A1.5 1.5 0 0 0 1 2.5z"/>
                      </svg>
                    <%end%>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>