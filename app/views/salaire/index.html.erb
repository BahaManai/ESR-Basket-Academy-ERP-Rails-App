<p style="color: green"><%= notice %></p>

<% content_for :title, "Salaires" %>
<div>
  <%= link_to "Entraîneurs >", entraineurs_path %>
</div>
<h1>Journal des salaires</h1>

<table class="table table-bordered datatable">
  <thead class="thead-light">
    <tr>
      <th>Entraineur</th>
      <th>Mois</th>
      <th>Salaire</th>
      <th>Actions</th>
    </tr>
  </thead>
  <tbody>
    <% @salaires.each do |salaire| %>
      <tr id="<%= dom_id salaire %>">
        <td><%= salaire.entraineur ? "#{salaire.entraineur.prénom} #{salaire.entraineur.nom}" : "Entraîneur inconnu" %></td>
        <td><%= "#{Date::MONTHNAMES[salaire.mois]} #{salaire.annee}" %></td>
        <td><%= salaire.salaire %>&nbspDT</td>
        <td>
          <%= button_to 'Supprimer', salaire_path(salaire), method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-danger btn-sm" %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>