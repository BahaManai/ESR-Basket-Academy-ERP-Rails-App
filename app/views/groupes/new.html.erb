<%= form_with model: @groupe, local: true do |form| %>
  <% if @groupe.errors.any? %>
    <div class="alert alert-danger">
      <ul>
        <% @groupe.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="mb-3">
    <%= form.label :heure_debut, "Heure de début" %>
    <%= form.number_field :heure_debut, class: "form-control" %>
  </div>

  <div class="mb-3">
    <%= form.label :heure_fin, "Heure de fin" %>
    <%= form.number_field :heure_fin, class: "form-control" %>
  </div>

  <div class="mb-3">
    <%= form.label :jour %>
    <%= form.text_field :jour, class: "form-control" %>
  </div>

  <div class="mb-3">
    <%= form.label :terrain %>
    <%= form.text_field :terrain, class: "form-control" %>
  </div>

  <div class="mb-3">
    <%= form.label :age_min, "Âge minimum" %>
    <%= form.number_field :age_min, class: "form-control" %>
  </div>

  <div class="mb-3">
    <%= form.label :age_max, "Âge maximum" %>
    <%= form.number_field :age_max, class: "form-control" %>
  </div>

  <div class="mb-3">
    <%= form.label :entraineur_id, "Entraîneur" %>
    <%= form.collection_select :entraineur_id, @entraineurs, :id, :nom, prompt: "Choisir un entraîneur", class: "form-control" %>
  </div>

  <div>
    <%= form.submit class: "btn btn-success" %>
  </div>
<% end %>
