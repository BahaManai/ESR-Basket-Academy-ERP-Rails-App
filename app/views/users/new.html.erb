<% content_for :title, "Utilisateurs" %>
<div>
  <%= link_to "Utilisateurs >", users_path %>
</div>

<%= form_with(model: @user, class: "new_forms needs-validation", local: true, html: { novalidate: true }) do |f| %>
<h1>Nouveau utilisateur :</h1>
  <% if @user.errors.any? %>
    <div class="custom-alert" role="alert">
      <button type="button" class="close-btn" aria-label="Close" onclick="document.querySelector('.custom-alert').style.display = 'none'">
      <i class="bi bi-x-lg"></i>
      </button>
      <h2>
        <%= pluralize(@user.errors.count, "erreur", "erreurs") %> détectée<%= 's' if @user.errors.count > 1 %> :
      </h2>
      <ul>
        <% @user.errors.full_messages.each do |message| %>
          <li style= "list-style-type: none;"><i class="bi bi-exclamation-triangle-fill"></i>&nbsp; <%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
    <br>

  <div class="form-group">
    <%= f.label :email, "Email *" %>
    <%= f.email_field :email, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :user_name,"Nom d'utilisateur *" %>
    <%= f.text_field :user_name, class: "form-control" %>
  </div>

  <div class="field">
    <%= f.label :role,"Rôle *" %>
    <%= f.select :role, [["Administrateur", "Administrateur"], ["Opérateur", "Opérateur"]], {prompt: "Choisissez un rôle"}, { class: "custom-select" } %>
  </div><br>

  <div class="form-group">
    <%= f.label :password,"Mot de passe *" %>
    <%= f.password_field :password, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :password_confirmation, "Confirmation du mot de passe *" %>
    <%= f.password_field :password_confirmation, class: "form-control" %>
  </div>

  <div class="form-actions">
    <%= f.submit "Créer l'utilisateur", class: "btn btn-primary" %>
  </div>
<% end %>
