<% content_for :title, "Utilisateurs" %>
<div>
  <%= link_to "Utilisateurs >", users_path, class: "btn btn-link" %>
</div>

<%= form_with(model: @user, class: "new_forms needs-validation", local: true, html: { novalidate: true }) do |f| %>
  <h1>Modifier un utilisateur :</h1><br>

  <% if @user.errors.any? %>
    <div class="custom-alert" role="alert">
      <button type="button" class="close-btn" aria-label="Close" onclick="document.querySelector('.custom-alert').style.display = 'none'">
      <i class="bi bi-x-lg"></i>
      </button>
      <h2><%= pluralize(@user.errors.count, "erreur", "erreurs") %> détectée<%= 's' if @user.errors.count > 1 %> :</h2>
      <ul>
        <% @user.errors.full_messages.each do |message| %>
          <li style="list-style-type: none;">
            <i class="bi bi-exclamation-triangle-fill"></i>&nbsp; <%= message %>
          </li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="mb-3">
    <%= f.label :email, "Email *", class: "form-label" %>
    <%= f.email_field :email, class: "form-control", placeholder: "Adresse email", required: true %>
    <div class="invalid-feedback">
      <i class="bi bi-exclamation-circle mr-1 ml-1"></i>L'email est obligatoire avec un format valide.
    </div>
  </div>

  <div class="mb-3">
    <%= f.label :user_name, "Nom d'utilisateur *", class: "form-label" %>
    <%= f.text_field :user_name, class: "form-control", placeholder: "Nom d'utilisateur", required: true %>
    <div class="invalid-feedback">
      <i class="bi bi-exclamation-circle mr-1 ml-1"></i>Le nom d'utilisateur est obligatoire.
    </div>
  </div>

  <div class="mb-3">
    <%= f.label :role, "Rôle *", class: "form-label" %>
    <%= f.select :role, [["Administrateur", "Administrateur"], ["Opérateur", "Opérateur"]], { prompt: "Choisissez un rôle" }, { class: "custom-select", required: true } %>
    <div class="invalid-feedback">
      <i class="bi bi-exclamation-circle mr-1 ml-1"></i>Le rôle est obligatoire.
    </div>
  </div>

  <div class="mb-3">
    <%= f.label :password, "Mot de passe *", class: "form-label" %>
    <%= f.password_field :password, class: "form-control", required: true %>
    <div class="invalid-feedback">
      <i class="bi bi-exclamation-circle mr-1 ml-1"></i>Le mot de passe est obligatoire.
    </div>
  </div>

  <div class="mb-3">
    <%= f.label :password_confirmation, "Confirmation du mot de passe *", class: "form-label" %>
    <%= f.password_field :password_confirmation, class: "form-control", required: true %>
    <div class="invalid-feedback">
      <i class="bi bi-exclamation-circle mr-1 ml-1"></i>La confirmation de mot de passe est obligatoire.
    </div>
  </div>

  <div class="mb-3">
    <%= f.submit "Enregistrer les modifications", class: "btn btn-primary" %>
  </div>
<% end %>

<div class="new_forms"> 
  <hr>
  <%= button_to "Supprimer cet utilisateur", @user, method: :delete, 
      class: "btn btn-danger", style: "float:right", 
      data: { controller: "confirm", confirm_message: "Êtes-vous sûr de supprimer cet utilisateur ?" } %>
</div>
