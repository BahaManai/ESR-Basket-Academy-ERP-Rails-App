<% content_for :title, "New joueur" %>

<div>
  <%= link_to "Joueurs >", joueurs_path %>
</div>

<%= form_with(model: @joueur, class: "new_forms needs-validation", local: true, html: { novalidate: true }) do |form| %>
<h1>Nouveau joueur :</h1><br>
  <% if @joueur.errors.any? %>
    <div class="alert alert-danger">
      <h2><%= pluralize(@joueur.errors.count, "erreurs") %> :</h2>
      <ul>
        <% @joueur.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

<div class="mb-3">
    <%= form.label :parent_id, "Parent", class: "form-label" %>
    <%= form.select :parent_id, 
          Parent.all.map { |parent| ["#{parent.prénom} #{parent.nom}", parent.id] }, 
          {prompt: "Choisir un parent existant"}, {class: "custom-select"} %>
    <div class="mt-2">
      <%= link_to "Nouveau parent", new_parent_path, class: "btn btn-success btn-sm" %>
    </div>
  </div>

  <div class="mb-3">
    <%= form.label :nom, class: "form-label" %>
    <%= form.text_field :nom, class: "form-control", placeholder: "Entrez le nom" , required: true%>
    <div class="invalid-feedback">
        Name is required !
      </div>
  </div>

  <div class="mb-3">
    <%= form.label :prénom, class: "form-label" %>
    <%= form.text_field :prénom, class: "form-control", placeholder: "Entrez le prénom" %>
  </div>

  <div class="mb-3">
    <%= form.label :sexe, class: "form-label" %><br>

    <div class="form-check form-check-inline ml-3">
      <%= form.radio_button :sexe, "male", class: "form-check-input" %>
      <%= form.label :sexe_male, "Mâle", class: "form-check-label" %>
    </div>

    <div class="form-check form-check-inline">
      <%= form.radio_button :sexe, "femelle", class: "form-check-input" %>
      <%= form.label :sexe_femelle, "Femelle", class: "form-check-label" %>
    </div>

  </div>


  <div class="mb-3">
    <%= form.label :date_naissance, "Date de naissance", class: "form-label" %>
    <div class="input-group">
      <div class="input-group-prepend">
        <span class="input-group-text" id="basic-addon1" style="background-color:rgba(119, 169, 223, 0.35)">
          <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-calendar2-week" viewBox="0 0 16 16" style="color: #0069d9;">
            <path d="M3.5 0a.5.5 0 0 1 .5.5V1h8V.5a.5.5 0 0 1 1 0V1h1a2 2 0 0 1 2 2v11a2 2 0 0 1-2 2H2a2 2 0 0 1-2-2V3a2 2 0 0 1 2-2h1V.5a.5.5 0 0 1 .5-.5M2 2a1 1 0 0 0-1 1v11a1 1 0 0 0 1 1h12a1 1 0 0 0 1-1V3a1 1 0 0 0-1-1z"/>
            <path d="M2.5 4a.5.5 0 0 1 .5-.5h10a.5.5 0 0 1 .5.5v1a.5.5 0 0 1-.5.5H3a.5.5 0 0 1-.5-.5zM11 7.5a.5.5 0 0 1 .5-.5h1a.5.5 0 0 1 .5.5v1a.5.5 0 0 1-.5.5h-1a.5.5 0 0 1-.5-.5zm-3 0a.5.5 0 0 1 .5-.5h1a.5.5 0 0 1 .5.5v1a.5.5 0 0 1-.5.5h-1a.5.5 0 0 1-.5-.5zm-5 3a.5.5 0 0 1 .5-.5h1a.5.5 0 0 1 .5.5v1a.5.5 0 0 1-.5.5h-1a.5.5 0 0 1-.5-.5zm3 0a.5.5 0 0 1 .5-.5h1a.5.5 0 0 1 .5.5v1a.5.5 0 0 1-.5.5h-1a.5.5 0 0 1-.5-.5z"/>
          </svg>
        </span>
      </div>
      <%= form.text_field :date_naissance, class: "form-control datepicker", placeholder: "date de naissance" %>
    </div>
  </div>

  <div class="mb-3">
    <%= form.label :note, class: "form-label" %>
    <%= form.text_area :note, class: "form-control", rows: 4, placeholder: "Ajoutez une note (facultatif)" %>
  </div>

  <div class="mb-3">
    <%= form.submit "Créer joueur", class: "btn btn-primary" %>
  </div>
<% end %>
