<p class="notice"><%= notice %></p>

<% content_for :title, "Parents" %>

<h1>Parents</h1>

<div id="parents">
  <table class="table table-bordered datatable">
    <thead class="thead-light">
      <tr>
        <th>ID</th>
        <th>Nom</th>
        <th>Téléphone</th>
        <th>Enfants</th>
        <th>Créé le</th>
        <th>Actions</th>
      </tr>
    </thead>
    <tbody>
      <% @parents.each do |parent| %>
        <tr id="<%= dom_id parent %>">
          <td><%= parent.id %></td>
          <td><%= "#{parent.prénom} #{parent.nom}" %></td>
          <td><%= parent.téléphone %></td>
          <td><% if parent.joueurs %>
            <ul><% parent.joueurs.each do |enfant|%>
              <li>  <%= link_to "#{enfant.prénom}", edit_joueur_path(enfant) %></li>
              <% end %></ul>
            <% end %>
          </td>
          <td><%= "#{parent.created_at.strftime('%d')} #{I18n.t('date.month_names_short')[parent.created_at.month]}, #{parent.created_at.strftime('%Y %H:%M')}" %></td>
          <td>
            <%= link_to "Modifier", edit_parent_path(parent), class: "btn btn-primary btn-sm" %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>

<p>
  <%= link_to "Nouveau parent", new_parent_path, class: "btn btn-success" %>
</p>
