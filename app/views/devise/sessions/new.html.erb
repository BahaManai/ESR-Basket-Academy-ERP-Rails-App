<div class="container d-flex justify-content-center align-items-center">
  <div class="card shadow-lg" style="width: 100%; max-width: 400px;margin-top:70px;border:1px solid #0023b5;border-radius: 17px; box-shadow: -8px 8px 15px rgba(0, 0, 0, 0.2);">
    <div style="background-image: url(<%= asset_path 'logo_BASKET.jpg' %>); background-size: cover; background-position: center;height:100px;border-radius: 15px 15px 0px 0px"></div>
    <div class="card-body">
      <h2 class="text-center mb-4" style="color: #0023b5">Se connecter</h2>
      <%= form_for(resource, as: resource_name, url: session_path(resource_name), html: { class: "needs-validation", novalidate: true }) do |f| %>
        <div class="field mb-3">
          <%= f.label :email, "Email", class: "form-label" %><br />
          <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control", required: true, placeholder: "Entrez votre email" %>
          <div class="invalid-feedback">
            <i class="bi bi-exclamation-circle mr-1 ml-1"></i>Veuillez entrer une adresse email valide.
          </div>
        </div>

        <div class="field mb-3">
          <%= f.label :password,"Mot de passe", class: "form-label" %><br />
          <%= f.password_field :password, autocomplete: "current-password", class: "form-control", required: true, minlength: 6, placeholder: "Entrez votre mot de passe" %>
          <div class="invalid-feedback">
            <i class="bi bi-exclamation-circle mr-1 ml-1"></i>Veuillez entrer un mot de passe valide.
          </div>
        </div>

        <% if devise_mapping.rememberable? %>
          <div class="field mb-3">
            <%= f.check_box :remember_me %>
            <%= f.label :remember_me,"Se rappeler de moi" %>
          </div>
        <% end %>

        <div class="actions d-grid text-center mb-3">
          <%= f.submit "Connexion", class: "btn btn-primary" %>
        </div>
      <% end %>

      <!-- < % = render "devise/shared/links" % > -->
    </div>
  </div>
</div>
