<% if flash[:notice] %>
  <div class="alert custom-notice mt-4 d-flex justify-content-between align-items-center" role="alert">
    <span>
      <i class="bi bi-check-circle-fill me-2 mr-2" style="color: #1b5e20;"></i><%= flash[:notice] %>
    </span>
  </div>
<% end %>

<% if flash[:alert] %>
  <div class="custom-alert" role="alert" id="flash-alert">
    <button type="button" class="close-btn" aria-label="Close" onclick="dismissAlert()">
      <i class="bi bi-x-lg"></i>
    </button>
    <%= raw(flash[:alert]) %>
  </div>
<% end %>

<script>
  function dismissAlert() {
    const alertBox = document.getElementById('flash-alert');
    if (alertBox) {
      alertBox.style.display = 'none';
    }
  }
</script>

